{
    "name": "MylinkTree Extension",
    "description": "My Link Tree extension",
    "version": "1.1.0",
    "content_security_policy": {
        "extension_pages": "script-src 'self' ; object-src 'self'"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["contextMenus", "clipboardWrite", "clipboardRead"],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/mylinktree16.png",
            "32": "icons/mylinktree32.png",
            "48": "icons/mylinktree48.png",
            "128": "icons/mylinktree128.png"
          }
    },
    "icons": {
      "16": "icons/mylinktree16.png",
      "32": "icons/mylinktree32.png",
      "48": "icons/mylinktree48.png",
      "128": "icons/mylinktree128.png"
    },
    "manifest_version": 3
}